<p> You're chatting in: <strong><%= @room_id %></strong> </p>

<div id="chat-container">
    <div id="chat-messages" phx-update="append">
        <%= for message <- @messages do %>
        <div class="message" id=<%= message.uuid %>> <%= message.content %></div>
        <%= end %>
    </div>
    <%= f = form_for :chat, "#", id: "chat-form", phx_submit: :submit_message %>
    <%= text_input f, :message, placeholder: "Enter your message..." %>
    </form>
</div>
</div>
